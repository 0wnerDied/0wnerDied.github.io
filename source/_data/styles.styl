// 强制覆盖Waline主题颜色
html body {
  --waline-white: #000 !important;
  --waline-light-grey: #666 !important;
  --waline-dark-grey: #999 !important;
  --waline-text-color: #888 !important;
  --waline-bgcolor: #1e1e1e !important;
  --waline-bgcolor-light: #272727 !important;
  --waline-border-color: #333 !important;
  --waline-disable-bgcolor: #444 !important;
  --waline-disable-color: #272727 !important;
  --waline-bq-color: #272727 !important;
  --waline-info-bgcolor: #272727 !important;
  --waline-info-color: #666 !important;
}

// 完全强制覆盖元素样式
html body .wl-panel, 
html body .wl-card, 
html body .wl-editor,
html body .wl-header,
html body .wl-input,
html body .wl-textarea {
  background-color: #fff !important;
  color: #444 !important;
  border-color: #ddd !important;
}

// 暗黑模式下Waline样式
.darkmode--activated {
  // 强制覆盖所有Waline元素样式
  .wl-panel, .wl-card {
    background-color: #222 !important;
    border-color: #444 !important;
  }
  
  // 评论内容
  .wl-content p, .wl-content span, .wl-meta {
    color: #ccc !important;
  }
  
  // 输入框
  .wl-editor, .wl-input, .wl-textarea {
    background-color: #333 !important;
    color: #ddd !important;
    border-color: #555 !important;
  }
}

// 亮色模式
body:not(.darkmode--activated) {
  // 代码块
  pre, code, .highlight {
    background: $code-bg-light !important;
    color: $code-text-light !important;
    border-radius: $material-radius !important;
    border: 1px solid $code-border-light !important;
    box-shadow: none !important;
    font-family: 'JetBrains Mono', 'Fira Mono', 'Menlo', 'Consolas', monospace;
  }
  .highlight .hljs-comment, .highlight .hljs-quote {
    color: #90a4ae !important;
  }
  .highlight .hljs-keyword, .highlight .hljs-selector-tag, .highlight .hljs-section {
    color: #1976d2 !important;
  }
  .highlight .hljs-string, .highlight .hljs-title, .highlight .hljs-name {
    color: #388e3c !important;
  }
  .highlight .hljs-number, .highlight .hljs-literal {
    color: #e64a19 !important;
  }
}

// 暗黑模式
body.darkmode--activated {
  // 代码块
  pre, code, .highlight {
    background: $code-bg-dark !important;
    color: $code-text-dark !important;
    border-radius: $material-radius !important;
    border: 1px solid $code-border-dark !important;
    box-shadow: none !important;
    font-family: 'JetBrains Mono', 'Fira Mono', 'Menlo', 'Consolas', monospace;
  }
  .highlight .hljs-comment, .highlight .hljs-quote {
    color: #607d8b !important;
  }
  .highlight .hljs-keyword, .highlight .hljs-selector-tag, .highlight .hljs-section {
    color: #90caf9 !important;
  }
  .highlight .hljs-string, .highlight .hljs-title, .highlight .hljs-name {
    color: #81c784 !important;
  }
  .highlight .hljs-number, .highlight .hljs-literal {
    color: #ffab91 !important;
  }
}
